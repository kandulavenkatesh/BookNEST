doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Login - BookNEST
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN", crossorigin="anonymous")
    style.
      body {
        min-height: 100vh;
        background: linear-gradient(135deg, #0d6efd 0%, #6f42c1 50%, #f8f9fa 100%);
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .login-card {
        border: none;
        border-radius: 18px;
        box-shadow: 0 16px 40px rgba(0, 0, 0, 0.12);
      }
      .brand {
        font-weight: 800;
        letter-spacing: 0.5px;
      }
      .badge-soft {
        background: rgba(13, 110, 253, 0.12);
        color: #0d6efd;
        border-radius: 999px;
        padding: 6px 12px;
        font-weight: 600;
      }
  body
    .container
      .row.justify-content-center
        .col-lg-5
          .card.login-card.p-4.p-lg-5.bg-white
            .d-flex.justify-content-between.align-items-center.mb-3
              span.brand.h4.mb-0 BookNEST
              span.badge-soft New
            h1.h3.fw-bold.mb-3 Welcome back
            p.text-muted.mb-4 Sign in to access your shelf, bookmarks, and recommendations.
            form(action="/login" method="post")
              .mb-3
                label.form-label(for="email") Email address
                input#email.form-control(type="email", name="email", placeholder="you@example.com", required)
              .mb-3
                label.form-label(for="password") Password
                input#password.form-control(type="password", name="password", placeholder="••••••••", required)
              .d-flex.justify-content-between.align-items-center.mb-3
                .form-check
                  input#remember.form-check-input(type="checkbox", name="remember")
                  label.form-check-label(for="remember") Remember me
                a.text-decoration-none(href="#") Forgot password?
              button.btn.btn-primary.w-100.py-2(type="submit") Sign in
            .mt-4.text-center
              span.text-muted Don't have an account?
              | 
              a(href="/register") Create one
            .mt-3.text-center
              a.text-decoration-none(href="/") ← Back to home
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL", crossorigin="anonymous")
